# Environment Configuration for Pokedex Application

# Application Environment
APP_ENV=local
APP_DEBUG=true
NODE_ENV=development

# Laravel Backend Configuration
APP_KEY=
APP_URL=http://localhost:8000

# Redis Configuration
REDIS_PASSWORD=pokedex_redis_pass

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Docker Development Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Production Environment Variables (uncomment for production)
# APP_ENV=production
# APP_DEBUG=false
# NODE_ENV=production
# NEXT_PUBLIC_API_URL=https://your-domain.com